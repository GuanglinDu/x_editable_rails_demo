<h3 style="margin: 30px 0px">Listing Articles</h3>

<table class="table">
<thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= editable article, :title %></td>
      <td><%= editable article, :content, type: "textarea" %></td>
      <td><%= link_to 'Show', article %></td>
      <td>
        <%= link_to 'Destroy', article, method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
